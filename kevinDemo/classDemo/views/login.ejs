<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Document</title>
</head>
<body>
<div id="loginWarp">
    <p>用户名：<input type="text" id="username"></p>
    <p>密码：<input type="password" id="password"></p>
    <p><input type="button" id="submitBtn" value="登录"></p>
</div>
</body>
<script src="http://cdn.bootcss.com/jquery/1.11.3/jquery.min.js"></script>
<script>
    $('#submitBtn').click(function(){
        $.post('/doLogin',{
            'username':$('#username').val(),
            'password':$('#password').val()
        },function(result){
            if(result==='1'){
                alert('登录成功');
            }else if(result==='-3'){
                alert('服务器错误');
            }else if(result==='-2'){
                alert('没有此用户名');
            }else if(result==='-1'){
                alert('密码错误');
            }
        })
    })
</script>
</html>