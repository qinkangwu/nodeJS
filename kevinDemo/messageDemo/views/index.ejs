<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>留言板</title>

    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <!--[if lt IE 9]>
    <script src="//cdn.bootcss.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="//cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
<div class="page-header" style="text-align: center;">
    <h1><small>留言板</small></h1>
</div>
<div class="container">
    <div class="row">
        <form class="form-horizontal col-lg-6">
            <div class="form-group">
                <label for="username" class="col-sm-2 control-label">姓名</label>

                <div class="col-sm-10">
                    <input type="text" class="form-control" id="username" name="username" placeholder="姓名">
                </div>
            </div>
            <div class="form-group">
                <label for="message" class="col-sm-2 control-label">留言</label>

                <div class="col-sm-10">
                    <textarea class="form-control" rows="3" name="message" id="message"></textarea>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button id="submitBtn" type="button" class="btn btn-success">提交</button>
                </div>
            </div>
            <div class="alert alert-success" role="alert" id="success" style="display: none;">
                <a href="#" class="alert-link">表单已经成功提交</a>
            </div>
            <div class="alert alert-danger" role="alert" id="error" style="display: none;">
                <a href="#" class="alert-link">表单提交失败</a>
            </div>
        </form>
    </div>
    <nav>
        <ul class="pagination">
            <li class="pageBtn active" data-page="1"><a href="#">1</a></li>
            <li class="pageBtn" data-page="2"><a href="#">2</a></li>
            <li class="pageBtn" data-page="3"><a href="#">3</a></li>
            <li class="pageBtn" data-page="4"><a href="#">4</a></li>
            <li class="pageBtn" data-page="5"><a href="#">5</a></li>
        </ul>
    </nav>
    <div id="allMessage">

    </div>
</div>

<script src="//cdn.bootcss.com/jquery/1.11.3/jquery.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/underscore.js"></script>
<script type="text/template" id="underMessageWarp">
    <div class="list-group">
        <a href="#" class="list-group-item active">
            <h4 class="list-group-item-heading">姓名：{{= username}}</h4>
            <p class="list-group-item-text">留言：{{= message}}</p>
            <p class="list-group-item-text">时间：{{= date}}</p>
        </a>
    </div>
</script>
<script type="text/javascript">
    function getAllMessageFn(page){
        $.get('/getMessage?page='+(page-1),function(result){
            var compiled=_.template($('#underMessageWarp').html());
            for(var i=0;i<result.result.length;i++){
                var html=compiled({username:result.result[i].username,message:result.result[i].message,date:result.result[i].date});
                $('#allMessage').prepend($(html));
            }

        })
    }
    $('.pageBtn').click(function(){
        var pageNums=$(this).attr('data-page');
        $('#allMessage').html('');
        getAllMessageFn(pageNums);
        $(this).addClass('active').siblings('li').removeClass('active');
    })
    getAllMessageFn(1);
    $('#submitBtn').click(function(){
        $.post('/submitWarp',{
            'username':$('#username').val(),
            'message':$('#message').val()
        },function(result){
            if(result==='-1'){
                $('#error').stop().fadeIn();
                $('#success').stop().fadeOut();
            }else if(result==='1'){
                $('#error').stop().fadeOut();
                $('#success').stop().fadeIn();
                $('#allMessage').html('');
                getAllMessageFn(1);
            }
        })
    })
</script>
</body>
</html>