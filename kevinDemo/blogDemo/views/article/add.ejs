<%- include ../include/header.ejs%>
<div class="container">
    <h1><%= title%></h1>
    <form class="form-horizontal" action="/articles/add" method="post">
        <div class="form-group">
            <label for="title" class="col-sm-2 control-label">标题：</label>
            <div class="col-sm-10 input-group">
                <input name="title" type="text" class="form-control" id="title" placeholder="标题">
            </div>
        </div>
        <div class="form-group">
            <label for="content" class="col-sm-2 control-label">正文：</label>
            <div class="col-sm-10 input-group">
                <textarea class="form-control" name="content" id="content" cols="80" rows="10" placeholder="内容"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">提交</button>
            </div>
        </div>
    </form>
</div>
<%- include ../include/footer.ejs%>